<body>
    {% include "sidebar.html.j2" %}

    <div id="content">

        <h1>Change Password</h1>

        {% if form_state == "saved" %}
        <p><b>Saved!</b></p>
        {% elif form_state == "wrong_password" %}
        <p><b>Wrong password.</b></p>
        {% elif form_state == "password_mismatch" %}
        <p><b>Passwords did not match.</b></p>
        {% endif %}

        <form method="post">
           <p>Old Password:
                <input type="password" name="old_password" placeholder="Password"/></p>

            <p>New Password:
                <input type="password" name="new_password" placeholder="Password"/></p>

            <p>Confirm Password:
                <input type="password" name="confirm_password" placeholder="Password"/></p>

            <p><input type="submit" value="Change Password" formaction="/change_password" /></p>
        </form>


    </div>
</body>

